@model OnSpa.Web.Models.ServiceTypeViewModel

<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="ServiceId" class="control-label"></label>
    <select asp-for="ServiceId" asp-items="Model.Services" class="form-control"></select>
    <span asp-validation-for="ServiceId" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="PriceString" class="control-label"></label>
    <input asp-for="PriceString" class="form-control" />
    <span asp-validation-for="PriceString" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="ImageFile" class="control-label"></label>
    <input asp-for="ImageFile" type="file" class="form-control" />
    <span asp-validation-for="ImageFile" class="text-danger"></span>
</div>
