@model OnSpa.Web.Data.Entities.Campus

@{
    ViewData["Title"] = "Add Campus";
}

<h2>Add</h2>

<h4>Campus</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCampus">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCity" />

            <partial name="_Campus" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="DetailsCity" asp-route-id="@Model.IdCity" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


